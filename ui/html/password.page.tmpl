{{template "base" .}}
{{define "title"}}Change Password{{end}}
{{define "main"}}
    <h2>Change password</h2>
    <form action='/user/change-password' method='POST'>
        <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
        {{with .Form}}
        <div>
            <label>Current password</label>
            {{with .Errors.Get "currentPassword"}}
                <label class='error'>{{.}}</label>
            {{end}}
            <input type='password' name='currentPassword' value='{{.Get "currentPassword"}}' >
        </div>
        <div>
            <label>New password</label>
            {{with .Errors.Get "newPassword"}}
                <label class='error'>{{.}}</label>
            {{end}}
            <input type='password' name='newPassword' value='{{.Get "newPassword"}}'>
        </div>
        <div>
            <label>Confirm password</label>
            {{with .Errors.Get "confirmPassword"}}
                <label class='error'>{{.}}</label>
            {{end}}
            <input type='password' name='confirmPassword' value='{{.Get "confirmPassword"}}'>
        </div>
        <div>
            <input type='submit' value='Change password'>
        </div>
    </form>
    {{end}}
{{end}}